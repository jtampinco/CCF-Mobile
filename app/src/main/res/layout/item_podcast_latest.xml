<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="@dimen/item_podcast_latest_thumbnail_width"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/iv_temp_podcast_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Jesus is the lord of life: Trust Him"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_default_8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="In peace I will both lie down and sleep, for you alone, O Lord, make me dwell in safety."
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_speaker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_default_8dp"
                android:drawableLeft="@drawable/ic_mic_grey_10dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Peter Tanchid"
                android:textColor="@color/text_grey"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_date_grey_10dp"
                android:drawablePadding="4dp"
                android:text="October 21"
                android:textColor="@color/text_grey"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>